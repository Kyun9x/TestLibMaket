<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d_60"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:background="@color/grayF8"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mIconLeft"
        android:layout_width="@dimen/d_30"
        android:layout_height="@dimen/d_30"
        android:layout_marginLeft="@dimen/d_15"
        android:background="?android:selectableItemBackground"
        android:padding="@dimen/d_5"
        android:src="@drawable/icon_back_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mlbTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d_10"
        android:layout_marginRight="@dimen/d_10"
        android:gravity="center"
        android:singleLine="true"
        android:text="title"
        android:textAppearance="@style/TextView.SemiBold"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mIconRight"
        app:layout_constraintStart_toEndOf="@+id/mIconLeft"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/mIconSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/d_10"
        android:background="?android:selectableItemBackground"
        android:visibility="gone"
        android:src="@drawable/icon_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mIconRight"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/mIconRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/d_15"
        android:visibility="invisible"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/icon_more_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grayDC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>